{% extends "galerie3.html.twig" %}
{% block stylesheet %}
    <link rel="stylesheet" href="public/css/galerieViewer.css">

{% endblock %}

{% block main %}



    <!--Modale viewer-->
    <div class="modal fade" id="modalViewer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel"></h5>
                    <button type="button" id=" dismissModalCross" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalSlide" >
                    <!--Modal Carousel-->







                    <div id="carouselExampleControls" class="carousel slide " data-ride="false" data-interval="false">
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="users/img/user/{{ userDatum.username }}/img_001.jpg" alt="First slide">
                            </div>

                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="users/img/user/{{ userDatum.username }}/img_002.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="users/img/user/{{ userDatum.username }}/img_003.jpg" alt="First slide">
                            </div>



                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span #modalSlideLeft class="fas fa-arrow-circle-left fa-3x" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span #modalSlideRight class="fas fa-arrow-circle-right fa-3x" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>




                    <!--fin Modal Carousel-->




                </div>


                <div class="modal-footer">
                    <button type="button" id="dismissModal"  class="btn btn-success" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

    <!-- Fin Modale viewer-->




{% endblock main %}


{% block script %}
    {{ parent() }}

    <script>  $('#modalViewer').modal('show');</script>

    <script> document.getElementById('dismissModal').addEventListener('click',function () {
            window.location.href="index.php?p=galerie3"
        });
    </script>


    <script src="public/js/homeUser.js"></script>


    <script src="public/js/SlideShow/SlideShow.js"></script>
    <script src="public/js/SlideShow/viewSlideshow.js"></script>
    <script src="public/js/SlideShow/mainSlideShow.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>



{% endblock script %}

