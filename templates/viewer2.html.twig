    <div class="modal fade" id="modalViewer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLabel"></h5>
                    <button type="button" id=" dismissModalCross" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalSlide" >
                    <i  id="modalSlideLeft" class="fas fa-chevron-circle-left fa-3x"></i>
                    <img class="card-img-top" id="modalViewerStyle" src=" {{ images }} "   alt="Card image cap">
                    <a href="slideShow.php?$img={{ slide+1 }}"><i id="modalSlideRight" class="fas fa-chevron-circle-right fa-3x"></i></a>
                </div>


                <div class="modal-footer">
                    <button type="button" id="dismissModal"  class="btn btn-outline-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

